<h1><%= book.title %></h1>

<p><strong>Author: </strong>
    <a href = '<%= book.author.url %>'><%= book.author.name %></a></p>
    <p><strong>Summary: </strong><%= book.summary %></p>
    <p><strong>ISBN: </strong><%= book.isbn %></p>
    <p><strong>Genre: </strong>
    <% book.genre.forEach(function (val, index){ %>
        <a href = '<%= val.url %>'><%= val.name %></a>
        <% if (index < book.genre.length - 1){ %>
            , &nbsp; </p>
        <% } %>
    <% }) %>

    <% if(book_instances.length){ %>
        <p>Delete the following book copy ID's before deleting this book</p>
        <div style="margin-left:20px;margin-top:20px;">
            <dl>
                <% book_instances.forEach(instance => { %>
                    <dt>
                        <a href="<%= instance.url %>"><%= instance._id %></a>
                    </dt>

                <% }) %>
            </dl>
        </div>

    <% } else { %>
        <p>Are you sure you want to delete this book?</p>

        <form method="POST">
            <div class="form-group">
                <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>">
            </div>
    
            <button class="btn btn-primary" type="submit">Delete</button>
        </form>
    <% } %>