<h1><%= title %></h1>

<!-- this is all sent through to the controller via req.body-->
<form method="POST">
    <div class="form-group">
        <label for="name">Genre: </label>
        <input
            id="name"
            class="form-control"
            type="text"
            placeholder="Fantasy, Poetry, etc"
            name="name"
            required
            value="<%= typeof genre === 'undefined' ? '': genre.name %>"/>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors){ %>
    <ul>
        <% errors.forEach(function(error){ %>
            <li style="list-style-type:none;padding:0;margin:0;"><%= error.msg %></li>
        <% }); %>
    </ul>
<% } %>