<h1><%= title %>: <%= genre.name %></h1>

<% if(genre_books.length){ %>
    <p><strong>The following books need to be deleted before this genre can be deleted: </strong></p>
    <div style="margin-left:20px;margin-top:20px;">
        <dl>
            <% genre_books.forEach(book => { %>
                <dt>
                    <a href="<%= book.url %>"><%= book.title %></a>
                    <dd><%= book.summary %></dd>
                </dt>
            <% }) %>
        </dl>
    </div>
<% }  else { %>
    <p><strong>Are you sure you want to delete this genre?</strong></p>

    <form method="POST">
        <div class="form-group">
            <input id="authorid" class="form-control" type="hidden" name="genreid" value="<%= genre._id %>">
        </div>

        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %>